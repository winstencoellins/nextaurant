generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CATEGORY {
  Food
  Drink
  Dessert
}

enum GENDER {
  Male
  Female
}

enum ROLE {
  Admin
  Employee
}

model User {
  id              String      @id @default(uuid())
  username        String      @unique
  email           String
  firstName       String  
  lastName        String
  password        String
  gender          GENDER
  createdDate     DateTime    @default(now())
  role            ROLE        @default(Employee)

  order           Order[]
  cart            Cart?
}

model Victual {
  id                    String      @id @default(uuid())
  category              CATEGORY
  name                  String
  shortDescription      String
  price                 String
  description           String
  createdDate           DateTime    @default(now())

  order                 Order[]
  cart                  Cart[]
}

model Cart {
  id              Int         @id @default(autoincrement())

  userId          String      @unique
  user            User        @relation(fields: [userId], references: [id])

  victualId       String
  victual         Victual     @relation(fields: [victualId], references: [id])
}

model Order {
  id              Int           @id @default(autoincrement())
  orderNumber     String
  dateCreated     DateTime      @default(now())
  amount          String           

  userId          String
  user            User          @relation(fields: [userId], references: [id])

  victualId       String
  victual         Victual       @relation(fields: [victualId], references: [id])
}